# =============================================================================
# ONAYLF Fair Management System - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------

# SECURITY WARNING: Generate a unique secret key for production
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# SECURITY WARNING: Don't run with debug turned on in production
# Set to True for development, False for production
DEBUG=True

# Comma-separated list of allowed hosts
# Development example: localhost,127.0.0.1
# Production example: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Comma-separated list of trusted origins for CSRF protection
# Must include protocol (http:// or https://)
# Development example: http://localhost:8000
# Production example: https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost:8000

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# PostgreSQL Database
POSTGRES_DB=onaylf
POSTGRES_USER=onaylf_user
POSTGRES_PASSWORD=change-this-strong-password
DBHOST=localhost
# For Docker Compose deployments, use the container name:
# DBHOST=onaylf_db
DBPORT=5432

# -----------------------------------------------------------------------------
# Email Configuration (for password resets and notifications)
# -----------------------------------------------------------------------------

# SMTP server hostname
# Examples:
# - Gmail: smtp.gmail.com
# - SendGrid: smtp.sendgrid.net
# - Mailgun: smtp.mailgun.org
EMAIL_HOST=smtp.gmail.com

# SMTP port (default: 25)
# Common ports: 25 (unencrypted/STARTTLS), 587 (STARTTLS), 465 (SSL)
EMAIL_PORT=25

# Whether to use TLS (STARTTLS) for the SMTP connection (default: True)
EMAIL_USE_TLS=True

# SMTP authentication credentials
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password-or-app-password

# Default "from" address for outgoing emails
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# List of admin email addresses (as Python list string)
# These addresses will receive error notifications and system alerts
# Format: [('Admin Name', 'admin@example.com'), ('Another Admin', 'admin2@example.com')]
ADMINS=[('Admin Name', 'admin@example.com')]

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------

# Django log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
DJANGO_LOG_LEVEL=INFO

# List of words for shared secret generation
WORDS="word1, word2, etc"



# =============================================================================
# Additional Notes
# =============================================================================
#
# For Development:
# ----------------
# 1. Copy this file: cp .env.example .env
# 2. Set DEBUG=True
# 3. Email settings are optional for development
#
# For Production (Docker Compose):
# ---------------------------------
# 1. Copy this file: cp .env.example .env
# 2. Generate a strong SECRET_KEY
# 3. Set DEBUG=False
# 4. Set DEMO_MODE=False
# 5. Update ALLOWED_HOSTS and CSRF_TRUSTED_ORIGINS with your domain
# 6. Configure PostgreSQL credentials
# 7. Set DBHOST=onaylf_db (the Docker container name)
# 8. Configure email settings for password resets
#
#
# Security Reminders:
# -------------------
# - Never commit .env to version control
# - Use strong, unique passwords
# - Rotate SECRET_KEY if compromised
# - Use HTTPS in production (required for CSRF_TRUSTED_ORIGINS)
# - For Gmail, use App Passwords instead of your account password
# - Regularly review and update ALLOWED_HOSTS
#
# =============================================================================
